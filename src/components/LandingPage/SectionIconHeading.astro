---
export interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="section-icon-heading">
  <div class="icon-container">
    <slot />
  </div>

  <div class="content-container">
    {text}
  </div>
</div>

<style>
  .section-icon-heading {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: fit-content;
    height: fit-content;
    padding: 1px;
    transform: scale(1.3);

    border: 1px solid var(--cougarcs-cougar-red);
    background: var(--cougarcs-cougar-red);
    border-radius: 2px;

    .icon-container {
      display: flex;
      align-items: center;
      justify-content: center;

      width: 24px;
      height: 24px;

      border-radius: 1px;

      overflow: hidden;
      img,
      svg {
        width: 100%;
        height: auto;
        max-width: 100%;
        max-height: 100%;
      }
    }

    .content-container {
      margin: 0 0.5rem;

      background-color: var(--cougarcs-cougar-red);
      color: white;

      text-transform: uppercase;
      text-align: center;
    }
  }
</style>
