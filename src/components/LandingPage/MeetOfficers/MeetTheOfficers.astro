---
import { Icon } from "astro-icon/components";
---

<div class="meet-officers">
  <div class="meet-officers-callout">
    <h2>Meet the officers that make up CougarCS</h2>

    <a href="/officers">
      <button> Check out the team <Icon name="mdi:play" /> </button>
    </a>
  </div>
</div>

<style>
  .meet-officers {
    position: relative;
    padding: 0;

    @media (min-width: 769px) {
      padding: 1rem 4rem 4rem;
    }
  }

  .meet-officers-callout {
    position: relative;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    padding: 4rem 2rem;

    overflow: clip;

    background:
    url("/officerbackground.png") right 0rem top 1rem / cover no-repeat,
      linear-gradient(180deg, #d42e4a 0%, #c80f2e 100%);

    color: white;

    h2 {
      margin: 0;
      font-size: 2rem;
      font-weight: bold;
      text-align: center;
    }

    a {
      z-index: 100;

      button {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.5rem;
        background-color: white;
        color: var(--cougarcs-cougar-red);
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;

        &:hover {
          background-color: var(--cougarcs-light-grey);
        }

        svg {
          display: inline-block;
          transform: scale(1.5);
          transform: translateY(4px);
        }
      }
    }

    .bg-image {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 1;

      overflow: visible;
    }

    @media (min-width: 769px) {
      align-items: start;
      padding: 4rem;
      max-height: 24rem;

      border-radius: 0.5rem;

      background:
        url("/officerbackground.png") right 0rem top -1rem / 50% auto no-repeat,
        linear-gradient(180deg, #d42e4a 0%, #c80f2e 100%);

      h2 {
        max-width: 24rem;
        text-align: left;
      }
    }
  }
</style>
